{
    "manifest_version": 2,
    "name": "Colab Notifier",
    "description": "Notifies you when longer running code cells are finished!",
    "version": "1.0",
    "permissions": ["storage", "notifications"],
    "content_scripts": [
        {
            "matches": [
                "https://colab.research.google.com/*"
            ],
            "js": [
                "./node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "hello"
    },
    "background": {
        "scripts": [
            "./node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "48": "./assets/icons/round-done-48.svg",
        "128": "./assets/icons/round-check-circle-outline.svg"
    }
}